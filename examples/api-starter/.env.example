# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
CORS_ORIGIN=*

# Authentication
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_SECRET=your-refresh-secret-here
REFRESH_TOKEN_EXPIRES_IN=7d

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=bayat_api_db
DB_SSL=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX=100 